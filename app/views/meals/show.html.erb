<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Meal #<%= @meal.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @meal.name %><dd>
              <dt>Recipes</dt>
                    <dd>
                      <% @meal.recipes.each do |recipe| %>
                    <li class>
                      <a href="/recipes/<%= recipe.id %>"><%= recipe.name %></li>
                      <% end %>
                    </ul><dd>
            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/meals" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/meals/<%= @meal.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_meal/<%= @meal.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
