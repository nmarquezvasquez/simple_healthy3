<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @recipe.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">

              <dt>Image</dt>
              <dd><img src="<%= @recipe.image %>" width="400"></dd>
              <dt>&nbsp;</dt>
              <dt>Ingredients</dt>
              <td>&nbsp;</td>
              <dd><%= @recipe.ingredients %></dd>

              <dt>&nbsp;</dt>
              <dt>Directions</dt>
              <td>&nbsp;</td>
              <dd><%= @recipe.directions %></dd>

              <dt>&nbsp;</dt>
              <dt>Main ingredient</dt>
              <td>&nbsp;</td>
              <dd><%= @recipe.main_ingredient.name %></dd>

              <dt>&nbsp;</dt>
              <dt>Meal</dt>
              <td>&nbsp;</td>
              <dd><%= @recipe.meal.name %></dd>

              <dt>&nbsp;</dt>
              <dt>Calories</dt>
              <td>&nbsp;</td>
              <dd><%= @recipe.calories %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/recipes" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/recipes/<%= @recipe.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_recipe/<%= @recipe.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
